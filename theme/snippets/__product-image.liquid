{% capture vars %}
  {% assign product_url = _product.url | within: collection %}
  {% if _product.featured_image == blank %}
    {% include '__image-placeholder' %}
    {% assign image = image | link_to: product_url %}
  {% else %}
    {% assign image = _product.featured_image.src | product_img_url: 'large' | img_tag: _product.featured_image.alt | link_to: product_url %}
  {% endif %}
{% endcapture %}