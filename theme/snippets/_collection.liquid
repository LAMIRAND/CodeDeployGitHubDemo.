{% include '__collection-image' %}
<div class="{% include '__thumbnail-span' %}{% if settings.masonry-style-layout %} masonry{% endif %}">
	<div class="thumbnail text-center">
		{{ image }}
		<div class="caption clearfix">
			<h4>{{ _collection.title | link_to: _collection.url, _collection.title }}</h4>
			{% if settings.show-product-count-for-collections %}<div class="text-muted">{{ _collection.all_products_count }}&nbsp;{{ _collection.all_products_count | pluralize: 'product','products' }}</div>{% endif %}
		</div>
	</div>
</div>
{% include '_end_row' %}