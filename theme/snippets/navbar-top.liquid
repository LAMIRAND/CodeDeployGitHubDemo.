{% assign show_navbar_top = false %}
{% if settings.logo-placement == 'navbar' %}{% assign show_navbar_top = true %}{% endif %}
{% if settings.disable-cart == blank %}{% assign show_navbar_top = true %}{% endif %}
{% if settings.show-search-in-navbar != blank %}{% assign show_navbar_top = true %}{% endif %}
{% if settings.show-multiple-currencies != blank and settings.currency-switcher-position == 'navbar' %}{% assign show_navbar_top = true %}{% endif %}
{% if settings.top-navbar-linklist-left != blank %}{% assign show_navbar_top = true %}{% endif %}
{% if settings.top-navbar-linklist-right != blank %}{% assign show_navbar_top = true %}{% endif %}
{% if settings.newsletter-signup-placement contains 'top-navbar' %}{% assign show_navbar_top = true %}{% endif %}

{% if settings.social-links-placement contains 'top-navbar' %}
  {% assign top_navbar_social = false %}
  {% assign social_links = 'dribbble email facebook flickr foursquare github google-plus instagram linkedin pinterest rss skype stack-exchange stack-overflow tumblr twitter vimeo youtube' | split: ' ' %}
  {% for link in social_links %}
    {% assign social_link = link | prepend: 'social-links-' %}
    {% if settings[social_link] != blank %}{% assign top_navbar_social = true %}{% endif %}
  {% endfor %}
  {% if top_navbar_social %}{% assign show_navbar_top = true %}{% endif %}
{% endif %}

{% if show_navbar_top %}
  {% include 'navbar' with 'top' %}
{% endif %}