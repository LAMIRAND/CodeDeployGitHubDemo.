{% include '__product-image' %}
<div class="{% for tag in product-loop.tags %}tag-{{ tag | downcase | handleize }} {% endfor %}{% include '__thumbnail-span' %}{% if thumbnail_layout == 'masonry' %} masonry{% endif %}" {% include '__product-data-attr' with _product %}>
  <div class="product-thumbnail">
    <div class="thumbnail-image">
      {{ image }}
    </div>
    <a href="{{ product_url }}" class="caption clearfix">
      <h4>{{ product-loop.title }}</h4>
      <div class="shopify-product-reviews-badge" data-id="{{ product-loop.id }}"></div>
      {% if has_prices and product-loop.price > 0 %}<div class="price">
        {% if product-loop.price_varies %}<small class="text-muted">{% include '__localize' with 'from' %}</small>&nbsp;{% include 'product-price' with product-loop.price_min %}{% else %}{% include 'product-price' with product-loop.price %}{% endif %}
        {% include 'product-on-sale' with product-loop %}  
      </div>{% endif %}
    </a>
  </div>
</div>