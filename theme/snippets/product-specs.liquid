{% if settings.show-product-vendor and settings.show-product-type and settings.show-product-collections and settings.show-product-tags %}
<dl>
  {% if settings.show-product-vendor %}
    <dt>{% include '__localize' with 'Vendor' %}</dt>
    <dd>{{ product.vendor | link_to_vendor }}</dd>
  {% endif %}
  {% if settings.show-product-type %}
    <dt>{% include '__localize' with 'Type' %}</dt>
    <dd>{{ product.type | link_to_type }}</dd>
  {% endif %}
  {% if settings.show-product-collections %}
    <dt>{% include '__localize' with 'Collections' %}</dt>
    <dd>{% for c in product.collections %}{% if forloop.index > 1 %}, {% endif %}{{ c.title | link_to: c.url }}{% endfor %}</dd>
  {% endif %}
  {% if settings.show-product-tags %}
    <dt>{% include '__localize' with 'Tags' %}</dt>
    <dd>{% for tag in product.tags %}{% assign tag_url = tag | handleize | prepend: '/collections/all/' %}{% if forloop.index > 1 %}, {% endif %}{% unless tag contains ':' %}{{ tag | link_to: tag_url }}{% endunless %}{% endfor %}</dd>
  {% endif %}
</dl>
{% endif %}