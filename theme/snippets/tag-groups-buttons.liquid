{% if template contains 'collection' and collection.all_tags.size > 1 %}

{% include 'tag-groups-array' %}

<!-- Loop for tag filter groups -->
{% for i in cat_array %}
{% unless i == '' %}
{% if settings.tag-placement == 'sidebar' %}
<h4 class="page-header">Filter by {{ i }}</h4>
{% endif %}
<ul class="{% if settings.tag-placement == 'sidebar' %}list-unstyled{% else %}nav nav-pills{% endif %}">
    {% if settings.tag-placement != 'sidebar' %}
    <li class="disabled"><a href="#">Filter by {{ i }}</a></li>
    {% endif %}
	<!-- Loop through tags in filter groups -->
	{% for t in collection.all_tags %}
	{% if t contains i %}
	{% if current_tags contains t %}
	<li class="active">{{ t | remove: i | remove: ':' | append: '&ensp;<i class="fa fa-times-circle"></i>' | link_to_remove_tag: t }}</li>
	{% else %}
	<li>{{ t | remove: i | remove: ':' | link_to_add_tag: t }}</li>
	{% endif %}
	{% endif %}	
	{% endfor %}
</ul>
{% endunless %}
{% endfor %}
  
{% endif %}