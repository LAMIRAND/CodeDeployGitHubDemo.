{% if tags %}
  {% if settings.tag-format != "dropdown" and tags.size < max_tags %}
  {% if settings.tag-placement == 'sidebar' %}
  <h3 class="page-header">{% include '__localize' with 'Filter' %}</h3>
  {% endif %}
  <ul class="{% if settings.tag-placement == 'sidebar' %}list-unstyled{% else %}nav nav-pills{% endif %}">
    {% if settings.tag-placement != 'sidebar' %}
    <li class="disabled"><a href="#">{% include '__localize' with 'Filter by tags' %}</a></li>
    {% endif %}
    {% for t in tags %}
	{% unless t contains ':' %}
    {% if current_tags contains t %}
    <li class="active">{{ t | append: '&emsp;<i class="fa fa-times-circle"></i>' | link_to_remove_tag: t }}</li>
    {% else %}
    <li>{{ t | link_to_add_tag: t }}</li>
    {% endif %}
	{% endunless %}
    {% endfor %}
    {% if current_tags and template == 'collection' %}<li><a href="./"><em>{% include '__localize' with 'Clear filters' %}</em></a></li>{% endif %}
  </ul>
  {% include 'tag-groups-buttons' %}
  {% endif %} 
{% endif %}