{{ tags }}
<hr style="border-top-color: red;">










{% comment %}
{% if collection.all_tags.size > 0 %}
  {% include '__max-tags' %}
  {% if settings.tag-format != "dropdown" and collection.all_tags.size < max_tags %}
  <ul class="nav nav-pills tags-list">
    {% if settings.tag-placement == 'sidebar' %}
    <h4 class="page-header">{% include '__localize' with 'Filter by' %}</h4>
    {% else %}
    <li class="disabled"><a href="#">{% include '__localize' with 'Filter by:' %}</a></li>
    {% endif %}
    {% for t in collection.all_tags %}
    {% if current_tags contains t %}
    <li class="active">{{ t | append: '&emsp;<i class="fa fa-times-circle"></i>' | link_to_remove_tag: t }}</li>
    {% else %}
    <li>{{ t | link_to_add_tag: t }}</li>
    {% endif %}
    {% endfor %}
    {% if current_tags %}<li><a href="./"><em>{% include '__localize' with 'Clear filters' %}</em></a></li>{% endif %}
  </ul>
  {% endif %}
{% endif %}
{% endcomment %}