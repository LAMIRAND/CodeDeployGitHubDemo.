{% include '__has-variables' %}
{% assign homepage = 'frontpage' %}
{% unless settings.homepage == blank %}{% assign homepage = pages[settings.homepage] %}
<h1 class="page-header">{{ homepage.title }}</h1>{% endunless %}
{% unless homepage.content == blank %}
  {% include '__formatted-content' with homepage.content %}
{% endunless %}

{% include 'features-linklist-overview' with 'linklist' %}

{% unless settings.featured-collections-linklist == blank %}
<h2>{{ linklists[settings.featured-collections-linklist].title }}</h2>
  {% include 'collections-list' with 'featured' %}
{% endunless %}

{% if settings.homepage-featured-products-collection %}
<h2>{{ collections[settings.homepage-featured-products-collection].title }}</h2>
  {% include 'products-list' with 'featured' %}
{% endif %}

{% include 'featured-blog-overview' with 'blog' %}

{% include 'testimonials' %}

{% for fb in blogs[settings.blog-for-facebook-album].articles %}
  {% if fb.metafields.lucid.facebook-album != blank and album_set != true %}
    {% include 'social-feed' with fb %}
    {% assign album_set = true %}
  {% endif %}
{% endfor %}

{% if settings.instagram-feed and settings.instagram-client-id != blank %}
  <!-- To do: Social feed snippet and page specific hashtag from meta data -->
  <section id="instagram-widget" data-client-id="{{ settings.instagram-client-id }}" data-hashtag="" data-default-hashtag="{{ settings.instagram-default-hashtag }}" data-blacklist="{{ settings.instagram-blacklist }}" data-image-count="8"></section>
{% endif %}